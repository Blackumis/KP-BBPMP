{
  "info": {
    "name": "KP BBPMP API",
    "description": "Collection for testing KP BBPMP Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Events",
      "item": [
        {
          "name": "Create Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "nama_kegiatan",
                  "value": "Workshop Pendidikan 2026",
                  "type": "text"
                },
                {
                  "key": "nomor_surat",
                  "value": "001/BBPMP/2026",
                  "type": "text"
                },
                {
                  "key": "tanggal_mulai",
                  "value": "2026-02-01",
                  "type": "text"
                },
                {
                  "key": "tanggal_selesai",
                  "value": "2026-02-02",
                  "type": "text"
                },
                {
                  "key": "jam_mulai",
                  "value": "08:00:00",
                  "type": "text"
                },
                {
                  "key": "jam_selesai",
                  "value": "16:00:00",
                  "type": "text"
                },
                {
                  "key": "batas_waktu_absensi",
                  "value": "2026-02-02 17:00:00",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/events",
              "host": ["{{base_url}}"],
              "path": ["events"]
            }
          }
        },
        {
          "name": "Get All Events",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/events?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["events"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Generate Form Link",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/events/1/generate-link",
              "host": ["{{base_url}}"],
              "path": ["events", "1", "generate-link"]
            }
          }
        }
      ]
    },
    {
      "name": "Attendance",
      "item": [
        {
          "name": "Get Event Form (Public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/attendance/form/1",
              "host": ["{{base_url}}"],
              "path": ["attendance", "form", "1"]
            }
          }
        },
        {
          "name": "Submit Attendance (Public)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"nama_lengkap\": \"Dr. John Doe, M.Pd\",\n    \"unit_kerja\": \"BBPMP Jawa Tengah\",\n    \"nip\": \"198501012010011001\",\n    \"provinsi\": \"Jawa Tengah\",\n    \"kabupaten_kota\": \"Kota Semarang\",\n    \"tanggal_lahir\": \"1985-01-01\",\n    \"nomor_hp\": \"081234567890\",\n    \"pangkat_golongan\": \"Pembina / IV-a\",\n    \"jabatan\": \"Kepala Seksi\",\n    \"email\": \"johndoe@example.com\",\n    \"email_konfirmasi\": \"johndoe@example.com\",\n    \"signature_url\": \"https://example.com/signature.png\",\n    \"pernyataan\": true\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/attendance/submit/1",
              "host": ["{{base_url}}"],
              "path": ["attendance", "submit", "1"]
            }
          }
        },
        {
          "name": "Get Event Attendances (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/attendance/event/1?page=1&limit=50",
              "host": ["{{base_url}}"],
              "path": ["attendance", "event", "1"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "50"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Certificates",
      "item": [
        {
          "name": "Generate Event Certificates",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/certificates/generate-event/1",
              "host": ["{{base_url}}"],
              "path": ["certificates", "generate-event", "1"]
            }
          }
        },
        {
          "name": "Send Event Certificates",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/certificates/send-event/1",
              "host": ["{{base_url}}"],
              "path": ["certificates", "send-event", "1"]
            }
          }
        },
        {
          "name": "Get Certificate History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/certificates/history/1",
              "host": ["{{base_url}}"],
              "path": ["certificates", "history", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Reference",
      "item": [
        {
          "name": "Get Kabupaten/Kota",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/reference/kabupaten-kota",
              "host": ["{{base_url}}"],
              "path": ["reference", "kabupaten-kota"]
            }
          }
        }
      ]
    }
  ]
}
